{
  "name": "greenmint-mobile",
  "version": "1.0.0",
  "description": "Mobile app for GreenMint blockchain platform",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace GreenMintMobile.xcworkspace -scheme GreenMintMobile -configuration Release archive"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "ethers": "^5.7.2",
    "@react-native-async-storage/async-storage": "^1.19.3",
    "react-native-get-random-values": "^1.9.0",
    "react-native-svg": "^13.14.0",
    "react-native-crypto": "^2.2.0",
    "react-native-randombytes": "^4.0.0",
    "@craftzdog/react-native-buffer": "^6.0.5",
    "readable-stream": "^3.6.2",
    "stream-browserify": "^3.0.0",
    "crypto-browserify": "^3.12.0",
    "react-native-url-polyfill": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "react-native-svg-transformer": "^1.0.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "react-native",
    "blockchain",
    "web3",
    "ethereum",
    "polygon",
    "nft",
    "carbon-credits",
    "sustainability"
  ],
  "author": "GreenMint Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GreenMint-Hub/0x_greenmint.git"
  },
  "bugs": {
    "url": "https://github.com/GreenMint-Hub/0x_greenmint/issues"
  },
  "homepage": "https://github.com/GreenMint-Hub/0x_greenmint#readme"
}
